<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.VentaController">
    <top>
        <Label text="Realizar Venta" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefWidth="400.0">
                    <children>
                        <Label text="Productos Disponibles" />
                        <TableView fx:id="tablaProductosDisponibles">
                            <columns>
                                <TableColumn fx:id="colIdDisp" prefWidth="100.0" text="ID" />
                                <TableColumn fx:id="colNombreDisp" prefWidth="200.0" text="Nombre" />
                                <TableColumn fx:id="colPrecioDisp" prefWidth="100.0" text="Precio" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#handleAgregarAlCarrito" text="Agregar --&gt;" />
                        <Button fx:id="btnQuitar" mnemonicParsing="false" onAction="#handleQuitarDelCarrito" text="&lt;-- Quitar" />
                    </children>
                </VBox>
                <VBox prefWidth="400.0">
                    <children>
                        <Label text="Carrito de Venta" />
                        <TableView fx:id="tablaCarrito">
                            <columns>
                                <TableColumn fx:id="colIdCarrito" prefWidth="100.0" text="ID" />
                                <TableColumn fx:id="colNombreCarrito" prefWidth="200.0" text="Nombre" />
                                <TableColumn fx:id="colPrecioCarrito" prefWidth="100.0" text="Precio" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="60.0" spacing="30.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblTotal" text="Total: $0.00">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button fx:id="btnRegistrarVenta" mnemonicParsing="false" onAction="#handleRegistrarVenta" prefHeight="35.0" prefWidth="150.0" text="Registrar Venta" style="-fx-background-color: #90ee90;" />
            </children>
            <padding>
                <Insets right="20.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>